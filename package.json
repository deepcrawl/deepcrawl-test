{
  "name": "@deepcrawl/test-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "DeepCrawl Test monorepo.",
  "repository": "github:deepcrawl/deepcrawl-test",
  "workspaces": {
    "packages": [
      "packages/test-cli",
      "packages/test-nodejs-sdk"
    ]
  },
  "scripts": {
    "build": "wsrun --serial --exclude-missing build",
    "commit": "cz",
    "lint": "wsrun --serial lint:check",
    "prettier:check": "prettier --list-different .",
    "prettier:fix": "prettier --write .",
    "release": "lerna publish",
    "prepare": "is-ci || husky install"
  },
  "resolutions": {
    "ansi-regex": "5.0.1",
    "ws": "7.4.6"
  },
  "devDependencies": {
    "@types/jest": "27.0.1",
    "@types/node": "14.17.14",
    "commitizen": "4.2.4",
    "eslint": "8.15.0",
    "eslint-config-deepcrawl": "7.0.0",
    "git-cz": "4.7.6",
    "husky": "7.0.2",
    "is-ci": "3.0.0",
    "jest-junit": "12.2.0",
    "lerna": "4.0.0",
    "postinstall-prepare": "2.0.0",
    "prettier": "2.3.2",
    "ts-node": "10.2.1",
    "typescript": "4.4.2",
    "wsrun": "5.2.4",
    "yarnhook": "0.5.1"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
